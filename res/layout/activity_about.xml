<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutActivity" >
    
    <ImageView
        android:id="@+id/about_icon"
        android:src="@drawable/rae_logo_background"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:scaleType="center"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/about_contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_icon"
        android:autoLink="all"
        android:text="@string/about_message" />
    
    <TextView
        android:id="@+id/about_thankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_contact_info"
        android:autoLink="all"
        android:text="@string/about_thankyou" />
    
    <TextView
        android:id="@+id/about_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_thankyou"
        android:autoLink="all"
        android:text="@string/about_source_code" />

</RelativeLayout>
